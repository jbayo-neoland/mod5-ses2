doctype html
html
  head
    
    each value in []
      link(rel="stylesheet" href=value)
    else 
      link(rel="stylesheet" href="style.css")
    
    - 
      const weights = {
        "xs": "10px",
        "sm": "12px",
        "md": "16px",
        "lg": "20px",
        "xl": "26px",
        "xxl": "30px",
        "xxxl": "40px"
      }
    each weight, label in weights
      style=`.font-size-${label} { font-size: ${weight}}`
    

    style.
      
      #list-options{
        list-style: none;
        padding: 20px
      }
      
      #list-options li {
        display: inline
      } 
      
